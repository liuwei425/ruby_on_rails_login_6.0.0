<%= form_for(@post) do |f| %>
  <%= f.label :Category %><br>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: 'Choose a category'}, {:class => "form-control" }) %><br>
  <%= f.label :title %><br>
  <%= f.text_field :title, placeholder: 'Type the post title here', class: "form-control" %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content, size: '60x12', placeholder: 'Type the post tect here', class: "form-control" %><br>
  <%= f.label :country %><br>
  <%= f.country_select :country , {}, {class: 'form-control'} %><br><br>
  <%= f.submit "Save", :class => "btn btn-success" %>
<% end %>