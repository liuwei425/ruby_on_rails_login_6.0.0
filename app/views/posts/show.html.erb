<div class="jumbotron">
    <div class="row">
        <h3><span style="float: right; margin-bottom: 10px" class="label label-warning"><%= @post.country_name %></span></h3>
        <h3 style="margin-right: 10px"><span style="float: right; margin-bottom: 10px; margin-right:10px" class="label label-success"><%= @post.category.name %></span></h3>
    </div>

    <h1><%= @post.title %></h1>
    <p><%= @post.content %></p>
    <%= link_to edit_post_path(@post) do %>
      <div class="btn btn-primary">
        <span class="glyphicon glyphicon-edit"></span> Edit
      </div>
    <% end %>
    <%= link_to @post, method: :delete, data: {confirm: "Are you sure?"}  do %>
      <div class="btn btn-danger">
        <span class="glyphicon glyphicon-remove"></span> Delete
      </div>
    <% end %>
</div>
