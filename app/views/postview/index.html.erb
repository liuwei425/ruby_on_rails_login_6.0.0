<div class="container">
    <div class="index-content">
        <div class="row">
            <div class="col-md-8">
                <% @posts.each do |post| %>
                      <div class="col-lg-12">
                          <div class="card">
      <!--                        <img src="http://cevirdikce.com/proje/hasem-2/images/finance-1.jpg">-->
                              <h4 style="padding-top: 20px"><%= post.title %></h4>
                              <% if post.content.length < 20 %>
                                  <p><%= post.content %></p>
                              <% else %>
                                  <p><%= post.content[0,20]+'...' %></p>
                              <% end %>
                              <%= link_to :controller => "postview", :action => "shown", :post => post.id do %>
                                  <button class="blue-button">Read More</button>
                              <% end %>
                          </div>
                      </div>
                <% end %>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <h3>Categories</h3>
                <% @categories.each do |category| %>
                    <div>
                        <%= link_to :controller => "postview", :action => "index", :category =>category do %>
                            <div style="padding:10px"><%= category.name %></div>
                        <% end  %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>